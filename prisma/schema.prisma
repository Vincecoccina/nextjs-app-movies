datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  title      String
  slug       String   @unique
  synopsis   String   @db.Text
  year       String
  country    String
  director   String
  casting    String
  coverImg   String?
  heroImg    String?
  trailer    String?
  file       String?
  nbViews    Int      @default(0)
  nbComments Int      @default(0)
  warning    String?
  catSlug    String
  cat        Category @relation(fields: [catSlug], references: [slug])
  visibility Int      @default(0)
  featured   Int      @default(0)
}

model Category {
  id     String  @id @default(cuid())
  slug   String  @unique
  title  String
  image  String?
  movies Movie[]
}
